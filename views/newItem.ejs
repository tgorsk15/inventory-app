<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/styles.css">
        <link rel="stylesheet" href="/items.css">
    </head>
    <body>
        <%- include('header') %>
        <div class="main-container" style="grid-column: 1 / 3;">
            <form action="/newItem" class="item-form" method="POST">
                <label for="itemName">Name:</label>
                <input type="text" name="itemName" id="itemName" required>

                <label for="units">How many Units in storage?</label>
                <input type="number" name="units" id="units" placeholder="0">

                <label for="price">How much per Unit?</label>
                <input type="number" name="price" id="price" placeholder="100" required>

                <label for="category-select">What categories does it fall into? </label>
                
                <div class="checkbox-container">
                <% categories.forEach(category => { %>
                    <div class="checkbox-holder">
                        <label for="<%= category.name %>">
                        <%= category.name %>
                        </label>
                        <input type="checkbox" name="<%= category.name %>" id="category-option">
                    </div>
                    
                <% }) %>
                </div>

                <label for="itemImg">Image URL:</label>
                <!-- <input type="file" id="itemImg" name="itemImg"
                    accept="image/png, image/jpeg"> -->
                <input type="text" name="itemImg" id="itemImg">

                <button type="submit">Add Item</button>
            </form>
        </div>
        
    </body>
</html>