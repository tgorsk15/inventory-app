<html>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <link rel="stylesheet" href="/items.css">
    </head>
    <body>
        <%- include('header') %>
        <%- include('sidebar', {categories: categories}) %>
        <div class="main-container">
            <h2 class="category-title">
                Category: <%= chosenCategory.name %> |  Founder: <%= chosenCategory.founder %>
            </h2>
            <div class="items-holder">
                <% categoryItems.forEach(item => { %>
                    <div class="item-container">
                        <div class="img-container">
                            <img src="<%= item.image_url %>" alt="<%= item.name %>" 
                            class="item-img">
                        </div>
                        <% if (item.name.length > 16) {%>
                            <% item.name = item.name.slice(0, 16) + '...' %>
                        <% } %>
                        <h3 class="item-name"><%= item.name %></h3>
                        <div class="description-container">
                            <p class="item-price">
                                Price: $<%= item.price %>
                            </p>
                            <p class="item-stock">
                                Units in Stock: <%= item.in_stock %>
                            </p>
                            <a href="/updateItem/<%= item.id %>" class="edit-item-link">Edit</a>
                        </div>
                    </div>
                <% }) %> 
            </div>
            
        </div>
        
    </body>
</html>